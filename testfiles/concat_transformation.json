{
  "input": {
    "person": {
      "firstName": "John",
      "middleName": "William",
      "lastName": "Doe"
    }
  },
  "jsonlt": {
    "transformations": [
      {
        "type": "concat",
        "path": ".person",
        "sources": ["firstName", "middleName", "lastName"],
        "target": "fullName",
        "delimiter": " "
      }
    ]
  },
  "output": {
    "person": {
      "firstName": "John",
      "middleName": "William",
      "lastName": "Doe",
      "fullName": "John William Doe"
    }
  }
}
