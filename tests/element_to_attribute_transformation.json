{
  "input": {
    "person": {
      "name": {
        "first": "John",
        "last": "Doe"
      }
    }
  },
  "jsonlt": {
    "transformations": [
      {
        "type": "element_to_attribute",
        "path": ".person",
        "source": "name",
        "target": "fullName"
      }
    ]
  },
  "output": {
    "person": {
      "fullName": "John"
    }
  }
}
